<div class="row" id="user<%= user.id %>" >
  <div class="col-sm-4">
  </div>


  <div class="col-sm-4">
    <div class="card">
      <div class="card-body form-group">
          <label><strong>Name:</strong></label> <br>
          <%= user.name %> <br>
          <label><strong>Email:</strong></label> <br>
          <%= user.email %> <br><br>
          <strong>Created At:</strong> <%= user.created_at_formatted %> <br />
          <strong>Updated At:</strong> <%= user.updated_at_formatted %><br />
          <br>
          <%= link_to "View", user_path(user), class: "btn btn-primary" %>
          <%= link_to "Edit", edit_user_path(user), class: "btn btn-success" %>
          <%= link_to "Delete", user_path(user), method: :delete, class: "btn btn-danger" %> <br />
      </div>
    </div>
  </div>
</div>
<hr>