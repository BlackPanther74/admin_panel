<h1>Add Student</h1>
<%= link_to "Back", :back, class: "btn btn-secondary" %>
<hr>

<div class="row">
  <div class="col-sm-4">
  </div>


  <div class="col-sm-4">
    <div class="card">
      <div class="card-body">
        <%= form_with(model: @student) do |form| %>
        <div class="form-group">
          <strong>First Name: </strong> <br>
          <%= form.text_field(:first_name) %> <br>
        </div>
        <div class="form-group">
          <strong>Last Name: </strong> <br>
          <%= form.text_field(:last_name) %> <br />
        </div>
        <div class="form-group">
          <strong><label>Age:</label></strong> <br> 
          <%= form.text_field(:age) %><br />
        </div>
        <div class="form-group">
          <strong><label>Education:</label></strong> <br>
          <%= form.text_field(:education) %><br>
        </div>
        <div class="btn btn-primary">
          <%= form.submit class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<hr>
