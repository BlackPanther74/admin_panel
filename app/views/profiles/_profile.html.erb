<div class="row" id="profile<%= profile.id %>">
  <div class="col-sm-4">
  </div>

  <div class="col-sm-4">
    <div class="card">
      <div class="card-body">
        <label><strong>Email:</strong></label> <%= profile.email %>
        <label><strong>Role:</strong></label> <%= profile.role %>
        <label><strong>Status:</strong></label> <%= profile.status %>
        <strong>Created At:</strong> <%= profile.created_at_formatted %>
        <strong>Updated At:</strong> <%= profile.updated_at_formatted %>

        <div><%= link_to "View", profile_path(profile) %></div>
        <div><%= link_to "Edit", edit_profile_path(profile) %></div>
        <div><%= link_to "Delete", profile_path(profile), method: :delete %></div> <br />
      </div>
    </div>
  </div>
</div>
<hr>