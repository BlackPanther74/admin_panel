<h1>Edit Course</h1>
<%= link_to "Cancel", :back, class: "btn btn-secondary" %>
<hr>

<div class="row">

  <div class="col-sm-4">
  </div>


  <div class="col-sm-4">
    <div class="card">
      <div class="card-body">
        <%= bootstrap_form_with(model: @course) do |form| %>
          <%= form.text_field :name, label: "Name:" %>
          <%= form.text_field :hours, label: "Hours:" %>
        <%= form.submit  class: "btn btn-primary", value: "Update" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
<hr>      