<h1>Sign In</h1>
<hr>

<div class="row">
  <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
      <div class="card">
        <div class="card-body">
          <%= bootstrap_form_with scope: 'session', method: :post, url: login_path do |f| %>
            <%= f.text_field :email, label: "Email:", placeholder: "Enter Email" %>
            <%= f.password_field  :password, label: "Password:", placeholder: "Enter Password" %>
            <%= f.submit  class: "btn btn-primary btn-block", value: "Log In"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <hr>
